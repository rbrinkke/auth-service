# Database Configuration
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/idp_db

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# RSA Key Paths (mounted volume)
PRIVATE_KEY_PATH=./keys/private_key.pem
PUBLIC_KEY_PATH=./keys/public_key.pem

# Private Key Password (Required for key encryption)
PRIVATE_KEY_PASSWORD=change-me-in-production

# JWT Configuration
ISSUER_URL=https://idp.example.com
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# MFA Encryption Key (Fernet - REQUIRED)
# Generate with: python3 -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
MFA_ENCRYPTION_KEY=GENERATE_NEW_KEY_HERE

# Email Configuration
EMAIL_PROVIDER=console
FROM_EMAIL=noreply@idp.example.com

# Application Settings
APP_NAME=Enterprise IdP
CORS_ORIGINS=["http://localhost:3000"]
LOG_LEVEL=INFO

# Rate Limiting
LOGIN_RATE_LIMIT=5
LOGIN_RATE_WINDOW=900
